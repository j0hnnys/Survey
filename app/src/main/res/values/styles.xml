<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/white</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:colorPrimary">@android:color/black</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonTheme" parent="AppTheme">
        <item name="android:elevation">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
    </style>

    <style name="TextViewTheme" parent="AppTheme">
        <item name="android:elevation">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="TakeSurveyTheme" parent="AppTheme">
        <item name="android:background">@android:color/holo_purple</item>
    </style>
    <style name="CreateSurveyTheme" parent="AppTheme">
        <item name="android:background">@android:color/holo_red_light</item>
        <item name="android:colorBackground">@android:color/holo_red_light</item>
        <item name="android:color">@android:color/holo_red_light</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:editTextBackground">@android:color/holo_red_light</item>
        <item name="android:editTextColor">@android:color/holo_red_light</item>
    </style>
    <style name="ResultsSurveyTheme" parent="AppTheme">
        <item name="android:background">@android:color/holo_green_dark</item>
        <item name="android:colorBackground">@android:color/holo_green_dark</item>
        <item name="android:color">@android:color/holo_green_dark</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
